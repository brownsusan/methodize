<div id = "detailEdit_container">
	<button class="detailEdit-closeDetailEdit-button">
		Close
	</button>

	<div class="eventDetailEdit-container">
		<div class="eventDetail-container core-hidden">
			<input id="eventDetail_id_input" type="hidden" />
			<div>
				<span id="eventDetail_title"></span>
			</div>
			<div>
				<span class="detail-label">Start: </span><span id="eventDetail_startDate"></span>
				<span class="detail-label">End: </span><span id="eventDetail_endDate"></span>
			</div>
			<div>
				<label class="detail-label">
					<input disabled="true" id="eventDetail_allDay_input" type="checkbox"/>
					All Day</label>
			</div>
			<div>
				<label class="detail-label">
					<input disabled="true" id="eventDetail_important_input" type="checkbox" />
					Important</label>
			</div>
			<div>
				<span class="detail-label">Reminders</span>
				<div id="eventDetail_reminders_container"></div>
			</div>
			<div>
				<span class="detail-label">Category: </span>
				<span id="eventDetail_category"></span>
			</div>
			<div>
				<span class="detail-label">Subtasks</span>
				<ul class="subtasks"></ul>
				<ul class="completed-subtasks"></ul>
			</div>
			<div>
				<span class="detail-label">Notes</span>
				<textarea disabled="true" id="eventDetail_note_textarea"></textarea>
			</div>
			<button id="eventDetail_editEvent_button">
				Edit
			</button>
			<button id="eventDetail_deleteEvent_button">
				delete
			</button>
		</div>

		<div class="eventEdit-container core-hidden">
			<input id="eventEdit_id_input" type="hidden" />
			<div>
				<input id="eventEdit_title_input" type="text" />
			</div>
			<div>
				<input id="eventEdit_startDate_input" class="datetimepicker" type="text" placeholder = "Start Date"/>
				<input id="eventEdit_endDate_input" class="datetimepicker" type="text" placeholder = "End Date"/>
			</div>
			<div>
				<label>
					<input id="eventEdit_allDay_input" type="checkbox"/>
					All Day</label>
			</div>
			<div>
				<span>Reminders</span>
				<div id="eventEdit_reminders_container"></div>
				<button id="eventEdit_addReminder_button">
					New Reminder
				</button>
			</div>
			<div>
				<label>Category <select id="eventEdit_category_select" ></select></label>
			</div>
			<div>
				<label>
					<input id="eventEdit_important_input" type="checkbox"/>
					Important</label>
			</div>
			<div>
				<span>Sub Tasks</span>
				<input class="addSubtask-input" type="text"  placeholder="Add a subtask..." />
				<ul class="subtasks"></ul>
				<ul class="completed-subtasks"></ul>
			</div>
			<div>
				<span>Notes</span>
				<textarea id="eventEdit_note_textarea"></textarea>
			</div>
			<button id="eventEdit_updateEvent_button">
				Save
			</button>
		</div>
	</div>

	<div class="taskDetailEdit-container">
		<div class="taskDetail-container core-hidden">
